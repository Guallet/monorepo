{
  "extends": "tsconfig/ts-library.json",
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.d.ts",
    "./src/**/*.json"
  ],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["/*"]
    }
  }
}
